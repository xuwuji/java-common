<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper
	namespace="com.xuwuji.eshop.db.mapper.EntityTranscationMapper">

	<resultMap type="EntityTranscation"
		id="EntityTranscationResult">
		<id property="id" column="id"></id>
		<result property="entityId" column="type"></result>
		<result property="entityUserId" column="type"></result>
		<result property="type" column="type"></result>
		<result property="amount" column="type"></result>
		<result property="item" column="type"></result>
		<result property="occur" column="java.util.Date"></result>
		<result property="phone" column="type"></result>
	</resultMap>

	<insert id="add" parameterType="EntityTranscation"
		useGeneratedKeys="true" keyProperty="id" keyColumn="id">
		insert into
		entitytranscation
		(entityId,entityUserId,type,amount,item,occur,phone)
		values(#{entityId},#{entityUserId},#{type},#{amount},#{item},now(),#{phone})
	</insert>

	<select id="getByEntityIdAndOpenId"
		resultType="EntityTranscation">
		select * from
		entitytranscation
		where
		entityId=#{0} and
		openId=#{1} order by id desc;
	</select>

	<select id="getTranscationByPhoneAndEntityId"
		resultType="EntityTranscation">
		select * from
		entitytranscation
		where
		phone=#{0} and
		entityId=#{1} order by id desc;
	</select>


</mapper>