<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xuwuji.eshop.db.mapper.ConfigMapper">

	<resultMap type="Config" id="configResult">
		<id property="id" column="id"></id>
		<result property="name" column="type"></result>
		<result property="value" column="type"></result>
		<result property="description" column="type"></result>
	</resultMap>

	<insert id="addParam" parameterType="hashmap"
		useGeneratedKeys="true" keyProperty="id">
		insert into eshopconfig
		(name,value,description) values (#{name},#{value},#{description})
	</insert>

	<update id="update" parameterType="hashmap">
		update eshopconfig set
		name=#{name},value=#{value},description=#{description}
		where id=#{id};
	</update>

	<select id="getAll" resultType="Config">
		select * from
		eshopconfig;
	</select>

</mapper>